{
    "compilerOptions": {
        "outDir": "dist",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "module": "Node16",
        "moduleResolution": "Node16",
        "rootDirs": ["src"],
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"]
        },
        "plugins": [
            {
                "transform": "typescript-transform-paths"
            }
        ],
        "lib": ["ES2023"],
        "target": "ES2022"
    },
    "ts-node": {
        "transpileOnly": true,
        "require": ["typescript-transform-paths/register"]
    },
    "include": ["src"]
}
